<p id="notice"><%= notice %></p>

<h1>Trip Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trip_categories.each do |trip_category| %>
      <tr>
        <td><%= trip_category.name %></td>
        <td><%= link_to 'Show', trip_category %></td>
        <td><%= link_to 'Edit', edit_trip_category_path(trip_category) %></td>
        <td><%= link_to 'Destroy', trip_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

