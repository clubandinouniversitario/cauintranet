		    		<%= form.label :category, "Tipo de Actividad", :class=>"mr-sm-2" %>
		    		<%= form.select :category, options_for_select([['Senderismo', 1], ['Montañismo', 2], ['Escalada', 3], ['Trail Running', 4], ['Caminata fuera de senderos', 5],['Empanadismo Tradicional', 6]], :category), {}, {:class=> "custom-select mr-sm-2"}  %>
		    	</div>
		    </div>
			<div class="form-row align-items-center">
		    	<div class="col-10 mt-1">
		    		<%= form.label :name, "Título de la salida" %>
		    		<br>
		    		<%= form.text_field :name, placeholder: "K2 Invernal por la magic Line", class:"form-control" %>
		    	</div>
 			</div>

 			<% if :category == 1 %>


 				<div class="form-group">
					<label>Integrantes, Datos Médicos y de Contacto</label>
					<input type="text" class="form-control" placeholder="Edmundo Hilario, en solitario">
				</div>
			<% else %>
				<div class="form-group">
					<label>2 o +</label>
					<input type="text" class="form-control" placeholder="Edmundo Hilario, en solitario">
				</div>
			<% end %>

  			<div class="col mt-4 pl-0">
    			<%= form.submit "Guardar Aviso", :class=>"btn btn-primary col-5"%>
  			</div>

  		</div>
	<% end %>










