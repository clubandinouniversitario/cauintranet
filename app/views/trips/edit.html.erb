	<%= form_with model: @trip, local: true, class:"mt-3" do |form| %>
		<% if @trip.errors.any? %>
	    	<div id="error_explanation">
	      		<h2>
	        		<%= pluralize(@trip.errors.count, "error") %> prohibited
	        		this article from being saved:
	      		</h2>
	      		<ul>
	        		<% @trip.errors.full_messages.each do |msg| %>
	          			<li><%= msg %></li>
	        		<% end %>
	      		</ul>
	    	</div>
	  	<% end %>
 
